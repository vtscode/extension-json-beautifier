{
  "manifest_version": 3,
  "name": "JSON Beautifier",
  "version": "1.0",
  "description": "Beautify JSON and check if it's valid",
  "author": "Riventus AHA",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
